<%- include("partials/header") -%>

<body>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>
    
    <% posts.forEach(function(post) {  %>
        <h2> <%= post.title %> </h2>
        <p> 
            <%= post.body.substring(0,100) + " ..." %> 
            <a href="posts/<%= post.title %>"  > >Read More</a>
        </p> 
    <% }); %>
</body>

<%- include("partials/footer") -%>

